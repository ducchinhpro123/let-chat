<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Application</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
    <div class="chat-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="user-profile">
                <div class="profile-header">
                    <div class="avatar-container">
                        <img src="https://api.dicebear.com/9.x/pixel-art/svg?seed=ducchinh" alt="Avatar" class="popup-avatar">
                        <span class="status-indicator"></span>
                    </div>
                    <h3>ducchinhpro123</h3>
                    <div class="settings-dropdown">
                        <button id="settings-btn" class="settings-btn">
                            <i class="fas fa-cog"></i>
                        </button>

                        <div class="dropdown-content" id="settingsDropdown">
                            <a href="/profile">	<i class="fas fa-user-alt"></i> Profile</a>
                            <button class="new-conversation-btn">new conversation</button>
                            <form action="/users/logout" method="POST" class="logout-form">
                                <button type="submit" class="logout-btn">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="conversation-list">
                <div class="conversation-item">
                    <h4>Team Project Discussion</h4>
                    <div class="last-message">Latest update on the project timeline</div>
                </div>
                <div class="conversation-item">
                    <h4>Alice Johnson</h4>
                    <div class="last-message">When is the next meeting?</div>
                </div>
                <div class="conversation-item">
                    <h4>Development Team</h4>
                    <div class="last-message">New deployment scheduled</div>
                </div>
            </div>
        </div>

        <!-- Main Chat Area -->
        <div class="main-chat">
            <div class="chat-header">
                <h2>Team Project Discussion</h2>
            </div>
            <div class="chat-messages">

                <!-- receiver -->
                <div class="message received">
                    <div class="message-avatar">
                        <img src="https://ui-avatars.com/api/?name=ducchinhpro123" alt="avatar">
                    </div>
                    <div class="message-bubble">
                        <div class="message-info">
                            <span class="message-username">John Doe</span>
                        </div>
                        <div class="message-content">
                            Hello, let's discuss the project timeline.
                            <br>
                            <span class="message-time">10:00 AM</span>
                        </div>

                    </div>
                </div>

                <!-- receiver -->
                <div class="message received">
                    <div class="message-avatar">
                        <img src="https://ui-avatars.com/api/?name=ducchinhpro123" alt="avatar">
                    </div>
                    <div class="message-bubble">
                        <div class="message-info">
                            <span class="message-username">John Doe</span>
                        </div>
                        <div class="message-content">
                            Hello, let's discuss the project timeline.
                            <br>
                            <span class="message-time">10:00 AM</span>
                        </div>
                    </div>
                </div>

                <!-- sender -->
                <div class="message sent">
                    <div class="message-bubble">
                        <div class="message-info">
                        </div>
                        <div class="message-content">
                            Sure, I've prepared the documentation for review.
                            <br>
                            <span class="message-time">10:00 AM</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="chat-input">
                <div class="input-container">
                    <textarea class="message-input" placeholder="Type a message..."></textarea>
                    <button class="send-button">Send</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Modal for new conversation -->
    <div id="newConversationModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>New Conversation</h2>
                <span class="close-modal">&times;</span>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="modalName">Modal name</label>
                    <input type="text" id="modalName" placeholder="Enter modal name...">
                </div>

                <div class="form-group">
                    <div class="checkbox-group">
                        <label for="isConversationPrivate">Is private?</label>
                        <input type="checkbox" id="isConversationPrivate" name="isConversationPrivate">
                    </div>
                    <small class="form-hint">Click to mark this channel as private, other people can't search your channel</small>
                </div>
                <button class="confirm-new-conversation">Confirm</button>
            </div>
        </div>
    </div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const settingBtn = document.getElementById('settings-btn');
        settingBtn.addEventListener('click', () => {
            document.getElementById('settingsDropdown').classList.toggle('show');
        });

        window.onclick = function(event) {
            if (!event.target.matches('.settings-btn') && !event.target.matches('.settings-btn *')) {
                const dropdowns = document.getElementsByClassName('dropdown-content');
                for (let i = 0; i < dropdowns.length; i++) {
                    const openDropdown = dropdowns[i];
                    if (openDropdown.classList.contains('show')) {
                        openDropdown.classList.remove('show');
                    }
                }
            }
        }
    })
</script>

<script src="/socket.io/socket.io.js"></script>
<script src="main.js" type="module"></script>
<script src="conversation_manager.js" type="module"></script>
</body>
</html>
